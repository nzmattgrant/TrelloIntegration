
@{
    ViewBag.Title = "Login";
}
@section scripts {
    <script>
        var loginAction = "@Url.Action("Login", "Account", null)";
    </script>
    <script src="~/Scripts/login.js"></script>
}

<div class="container">

    <div class="alert alert-danger errorMessage hidden" role="alert">
        <span class="glyphicon glyphicon-exclamation-sign"></span>
        There was an error trying to log in using Trello
    </div>

    <div class="row">
        <div class="col-lg-12 text-center">
            <h1 class="h1">Log in to Trello</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-5">
        </div>
        <div class="col-lg-2">
            <button class="login btn-primary btn-lg btn-block">Login</button>
        </div>
    </div>

</div>
